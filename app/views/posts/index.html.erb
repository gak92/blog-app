<div>
  <h1>List of all post for a given user</h1>
  <div class="d-flex align-items-center">
    <div class="w-25" style="width: 120px;">
      <img src=<%= @user.photo %> class="img-thumbnail" />
    </div>
    <div class="w-25">
      <h2><%= @user.name %></h2>
      <p>Number of posts: <%= @user.posts_counter %></p>
    </div>
  </div>

  <div class="mt-3">
    <ul>
      <% @posts.each do |post| %>
        <li class="card mt-2">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h3><%= link_to post.title, user_post_path(@user.id, post) %></h3>
            <div class="d-flex">
              Comments: <%= post.comments_counter%>
              Likes: <%= post.likes_counter%>
              <% if can? :destroy, post%>
                <%= form_with url: "/users/#{@user.id}/posts/#{post.id}" , method: :delete do |f|%>
                  <%= f.submit 'Delete', class: 'btn btn-sm btn-danger' %>
                <%end%>
              <%end%>
            </div>
          </div>
          <div class="card-body">
            <p><%= post.text%></p>
          </div>        

          <div>
            <ul>
              <% post.recent_comments.includes(:author).each do |comment| %>
                <li>
                  <p><%= comment.author.name %>: <%= comment.text %></p>
                </li>
              <% end %>
            </ul>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
  <div>
    <%= link_to "Back to User", user_path(@user) %>
  </div>
</div>